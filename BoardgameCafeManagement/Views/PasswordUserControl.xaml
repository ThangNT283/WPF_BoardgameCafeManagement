<UserControl x:Class="BoardgameCafeManagement.Views.PasswordUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BoardgameCafeManagement.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged"
                     BorderThickness="0 0 0 2" BorderBrush="White" Margin="10 0 0 20"
                    Width="700" FontSize="20" Background="Transparent" Foreground="White"/>
    </Grid>
</UserControl>
